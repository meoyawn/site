{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "bld": "organize-md organize-blog.yaml && remix build",
    "clean": "rm -rf .cache/ functions/ public/build/ public/blog/ public/images/blog/",
    "cleanDeploy": "bun run clean && bun run bld && bun run deploy",
    "deploy": "wrangler pages deploy ./public --commit-dirty=true",
    "dev": "concurrently \"bun:dev:*\"",
    "dev:blog": "organize-md --watch organize-blog.yaml",
    "dev:remix": "remix dev --no-restart -c \"bun run start\"",
    "lint": "eslint app/ --fix",
    "test": "bun test",
    "typecheck": "tsc",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.16.0",
    "@remix-run/cloudflare-pages": "^1.16.0",
    "@remix-run/react": "^1.16.0",
    "clsx": "^2.0.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.7.0",
    "isbot": "^3.6.8",
    "marked": "^5.0.1",
    "marked-gfm-heading-id": "^3.0.3",
    "marked-highlight": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.0",
    "@remix-run/dev": "^1.16.0",
    "@remix-run/eslint-config": "^1.16.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/js-yaml": "^4.0.5",
    "@types/marked": "^5.0.0",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",
    "bun-types": "^0.6.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "js-yaml": "^4.1.0",
    "node-html-parser": "^6.1.5",
    "organize-md": "^0.3.0",
    "postcss": "^8.4.26",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "wrangler": "^3.0.1"
  }
}
